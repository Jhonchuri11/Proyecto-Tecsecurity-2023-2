<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/navigation_perfil">

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="com.jhon.churivanti.tsecurity.ui.view.PerfilFragment"
        android:label="Perfil"
        android:color="@color/black"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/navigation_visit"
        android:name="com.jhon.churivanti.tsecurity.ui.view.VisitFragment"
        android:label="Visit"
        tools:layout="@layout/activity_visit_fragment"/>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jhon.churivanti.tsecurity.ui.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/navigation_info"
        android:name="com.jhon.churivanti.tsecurity.ui.view.Infofragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />
</navigation>